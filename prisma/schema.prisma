model Shipment {
  id               String   @id @default(uuid())
  productName      String
  trackingNumber   String   @unique
  status           String   @default("Processing")
  location         String
  placedAt         DateTime @default(now())
  estimatedDelivery DateTime
  address          String
  note             String?
  userEmail        String
}

enum Role {
  USER
  ADMIN
}
